<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/card_background"
    android:visibility="visible">

    <!-- Order Status and Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/orderStatusIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/order_status_icon"
            android:contentDescription="none"
            android:layout_marginEnd="8dp" />

        <!-- Order Text Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrived in 8 minutes"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR 1000"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/orderdates"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Product Images -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/productImage1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/clothes"
            android:contentDescription="Product Image"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/productImage2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/clothes"
            android:contentDescription="Product Image"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/productImage3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/clothes"
            android:contentDescription="Product Image"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/productImage4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/clothes"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>